<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="@dimen/_70sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/user13">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/profile_image"
            android:layout_toRightOf="@id/profile_image"
            android:text="username"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Usermaill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/profile_image"
            android:text="username"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/UserStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Usermaill"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_toEndOf="@id/profile_image"
            android:text="username"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/UserRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserStatus"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_toEndOf="@id/profile_image"
            android:text="username"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/Dateofjoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserRequest"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_toEndOf="@id/profile_image"
            android:text="username"
            android:textSize="12dp" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>