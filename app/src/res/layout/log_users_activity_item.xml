<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_14sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:elevation="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textfirstpart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El usuario" />

        <TextView
            android:id="@+id/Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/textfirstpart"
            android:text="username example"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSecondPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Username"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="se ha unido a la aplicaciÃ³n el dia" />

        <TextView
            android:id="@+id/textDatelogevent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSecondPart"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="23/12/2020" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>